{
  "name": "mudslinger",
  "type": "module",
  "watch": {
    "build-client": {
      "patterns": [
        "ts"
      ],
      "extensions": "ts",
      "quiet": false
    },
    "start": "{ts}/*.js"
  },
  "scripts": {
    "prestart": "node tools/prestart.js",
    "start": "node dist/src/server/app.js",
    "postinstall": "node tools/postinstall.js",
    "clean": "rimraf ts/build && rimraf dist && rimraf static/mudslinger.js",
    "build": "npm run build-client && npm run build-server",
    "build-client": "vite build --config vite.config.js",
    "build-server": "tsc -p ts/tsconfig.server.json",
    "vite": "vite --config vite.config.js",
    "lint": "tslint -c ts/tslint.json ts/src/client/*.ts && tslint -c ts/tslint.json ts/src/server/*.ts",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jquery": "^3.5.31",
    "@types/node": "22.7.5",
    "@types/ws": "^8.5.12",
    "codemirror": "^6.0.1",
    "fs-extra": "^11.2.0",
    "http-server": "^14.1.1",
    "rimraf": "^6.0.1",
    "tslint": "^6.1.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "express": "^4.21.1",
    "jquery": "3.7.1",
    "jqwidgets-framework": "^20.0.0",
    "npm-watch": "^0.13.0",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0"
  }
}
