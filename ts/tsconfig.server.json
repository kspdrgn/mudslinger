{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./src/server/*",
                "../node_modules/*",
                "/definitions/*",
                "../configServer.js",
            ]
        },
        "rootDir": ".",
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "outDir": "dist",
        "target": "ES2017",
    },
    "include": [
        "./src/server/*"
    ]
}