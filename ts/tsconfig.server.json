{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./src/server/*",
                "../node_modules/*",
                "/definitions/*"
            ],
        },
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "outDir": "../dist",
        "target": "ES2017",
    },
    "include": [
        "./src/server/*"
    ],
    "exclude": [
        "node_modules"
    ]
}